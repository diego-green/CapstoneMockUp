@page
@model TestingMockup.Pages.Project.EditAddAnnouncementModel
@attribute [Microsoft.AspNetCore.Authorization.Authorize]
@{
    ViewData["Title"] = "Edit/Add Announcement";
}
<h2>Edit/Add Announcement</h2>


<form method="post">
    <div class="mb-3">
        <label for="Announcement" class="form-label">Announcement</label>
        <textarea id="Announcement" name="Announcement" rows="4" class="form-control"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Dashboard" class="btn btn-secondary">Cancel</a>
</form>